{
  "name": "monolith-express-react",
  "version": "1.0.0",
  "description": "Monolithic Express + React Boilerplate with TypeScript and Vercel ‚ù§",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist-server/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "npm run build:client && npm run build:server",
    "deploy": "vercel --prod",
    "dev:server": "nodemon",
    "dev:client": "webpack serve",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "rm -rf dist; npm run bundle:client && npm run render:client",
    "bundle:client": "webpack --mode production",
    "render:client": "node src/app-bootstrap/ssg.js",
    "postbuild": "react-snap"
  },
  "author": "Sutan Nasution <contact@sutanlab.id>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sutanlab/monolith-express-react.git"
  },
  "bugs": {
    "url": "https://github.com/sutanlab/monolith-express-react/issues"
  },
  "reactSnap": {
    "source": "dist",
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": true
    },
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "vercel": "^21.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^12.20.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router": "^5.1.12",
    "@types/react-router-dom": "^5.1.7",
    "concurrently": "^5.3.0",
    "dotenv-webpack": "^7.0.1",
    "esm": "^3.2.25",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.0",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "parcel-codegen-loader": "^0.6.6",
    "react-snap": "^1.23.0",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
